ASPNETCORE_ENVIRONMENT=Development
DatabaseProvider=PostgreSQL

# Local Development Database Connection
DATABASE_URL=Host=localhost;Port=5432;Database=your_database;Username=your_user;Password=your_password;Pooling=true;

# Or use it with host.docker.internal when API runs in Docker and PostgreSQL runs separately
# DATABASE_URL=Host=host.docker.internal;Port=5432;Database=your_database;Username=your_user;Password=your_password;Pooling=true;

# Production (Neon or other PostgreSQL provider)
# DATABASE_URL=Host=your-host.neon.tech;Database=your_db;Username=your_user;Password=your_password;SSL Mode=Require;Trust Server Certificate=true
